{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:landing": {
      "cache": false,
      "persistent": true
    },
    "dev:innovator": {
      "cache": false,
      "persistent": true
    },
    "dev:investor": {
      "cache": false,
      "persistent": true
    },
    "dev:hub": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:ui": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "deploy": {
      "dependsOn": ["build", "lint", "test"],
      "outputs": []
    }
  }
}
